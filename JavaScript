let lastFrameTime = performance.now();
let fps = 0;

function updateFPS() {
    const now = performance.now();
    const delta = now - lastFrameTime;
    fps = Math.round(1000 / delta);
    lastFrameTime = now;
    
    document.getElementById('fps-counter').textContent = `FPS: ${fps}`;
    requestAnimationFrame(updateFPS);
}

// Start the loop
updateFPS();
